@{
    ViewBag.Title = "데이터 내보내기";
}

<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2>데이터 내보내기</h2>
            <p class="text-muted">데이터를 JSON 파일로 내보내기</p>
            <button type="button" class="btn btn-primary btn-lg" id="btnShowPreview">
                <span class="glyphicon glyphicon-export"></span> 데이터 미리보기
            </button>
        </div>
    </div>
</div>

<!-- 데이터 미리보기 모달 -->
<div class="modal fade" id="previewModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
                <h4 class="modal-title">데이터 미리보기</h4>
            </div>
            <div class="modal-body">
                <!-- 내보내기 정보 -->
                <div class="alert alert-info">
                    <strong>내보내기 날짜:</strong> <span id="exportDate"></span><br />
                    <strong>담당자:</strong> <span id="exportedBy"></span>
                </div>

                <!-- 탭 네비게이션 -->
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active">
                        <a href="#summaryTab" role="tab" data-toggle="tab">요약</a>
                    </li>
                    <li role="presentation">
                        <a href="#productsTab" role="tab" data-toggle="tab">제품 목록</a>
                    </li>
                    <li role="presentation">
                        <a href="#ordersTab" role="tab" data-toggle="tab">주문 목록</a>
                    </li>
                </ul>

                <!-- 탭 컨텐츠 -->
                <div class="tab-content" style="margin-top: 15px;">
                    <!-- 요약 탭 -->
                    <div role="tabpanel" class="tab-pane active" id="summaryTab">
                        <div class="row">
                            <div class="col-md-3 col-sm-6">
                                <div class="panel panel-primary">
                                    <div class="panel-heading text-center">
                                        <h4>전체 제품</h4>
                                    </div>
                                    <div class="panel-body text-center">
                                        <h2 id="totalProducts">0</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <div class="panel panel-success">
                                    <div class="panel-heading text-center">
                                        <h4>전체 주문</h4>
                                    </div>
                                    <div class="panel-body text-center">
                                        <h2 id="totalOrders">0</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <div class="panel panel-info">
                                    <div class="panel-heading text-center">
                                        <h4>총 매출</h4>
                                    </div>
                                    <div class="panel-body text-center">
                                        <h2 id="totalRevenue">₩0</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <div class="panel panel-warning">
                                    <div class="panel-heading text-center">
                                        <h4>대기 주문</h4>
                                    </div>
                                    <div class="panel-body text-center">
                                        <h2 id="pendingOrders">0</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 제품 목록 탭 -->
                    <div role="tabpanel" class="tab-pane" id="productsTab">
                        <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr class="info">
                                        <th class="text-center">제품ID</th>
                                        <th>제품명</th>
                                        <th>카테고리</th>
                                        <th class="text-right">가격</th>
                                        <th class="text-center">재고</th>
                                        <th class="text-center">상태</th>
                                    </tr>
                                </thead>
                                <tbody id="productsTableBody">
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- 주문 목록 탭 -->
                    <div role="tabpanel" class="tab-pane" id="ordersTab">
                        <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr class="info">
                                        <th class="text-center">주문ID</th>
                                        <th class="text-center">주문일</th>
                                        <th>고객명</th>
                                        <th>제품명</th>
                                        <th class="text-center">수량</th>
                                        <th class="text-right">금액</th>
                                        <th class="text-center">배송상태</th>
                                    </tr>
                                </thead>
                                <tbody id="ordersTableBody">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    <span class="glyphicon glyphicon-remove"></span> 닫기
                </button>
                <button type="button" class="btn btn-success" id="btnDownload">
                    <span class="glyphicon glyphicon-download-alt"></span> JSON 다운로드
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var currentData = null;

            // 데이터 미리보기 버튼 클릭
            $('#btnShowPreview').on('click', function () {
                var $btn = $(this);
                $btn.prop('disabled', true).html('<span class="glyphicon glyphicon-refresh glyphicon-refresh-animate"></span> 로딩중...');

                $.ajax({
                    url: '@Url.Action("GetPreviewData", "DataExport")',
                    type: 'POST',
                    dataType: 'json',
                    success: function (response) {
                        if (response.success) {
                            currentData = response.data;
                            renderPreview(currentData);
                            $('#previewModal').modal('show');
                        } else {
                            alert('오류: ' + response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('서버 오류가 발생했습니다: ' + error);
                    },
                    complete: function () {
                        $btn.prop('disabled', false).html('<span class="glyphicon glyphicon-export"></span> 데이터 미리보기');
                    }
                });
            });

            // 다운로드 버튼 클릭
            $('#btnDownload').on('click', function () {
                if (!currentData) {
                    alert('데이터가 없습니다.');
                    return;
                }
                try {
                    // JSON 파일 생성 및 다운로드
                    var jsonString = JSON.stringify(currentData, null, 2);
                    var blob = new Blob([jsonString], { type: 'application/json;charset=utf-8;' });
                    var link = document.createElement('a');
                    var url = URL.createObjectURL(blob);

                    var fileName = 'export_' + formatDateTime(new Date()) + '.json';
                    link.setAttribute('href', url);
                    link.setAttribute('download', fileName);
                    link.style.visibility = 'hidden';

                    document.body.appendChild(link);
                    link.click();
                    document.body.removeChild(link);

                    // 성공 메시지
                    alert('파일이 다운로드되었습니다: ' + fileName);
                    $('#previewModal').modal('hide');
                } catch (e) {
                    alert('다운로드 중 오류가 발생했습니다: ' + e.message);
                }
            });

            // 데이터 렌더링 함수
            function renderPreview(data) {
                // 기본 정보
                $('#exportDate').text(data.ExportDate);
                $('#exportedBy').text(data.ExportedBy);

                // 요약 정보
                $('#totalProducts').text(data.Summary.TotalProducts);
                $('#totalOrders').text(data.Summary.TotalOrders);
                $('#totalRevenue').text('₩' + Number(data.Summary.TotalRevenue).toLocaleString());
                $('#pendingOrders').text(data.Summary.PendingOrders);

                // 제품 목록
                var productsHtml = '';
                $.each(data.Products, function (i, product) {
                    var statusClass = product.Status === '재고있음' ? 'success' : 'danger';
                    productsHtml += '<tr>' +
                        '<td class="text-center">' + product.ProductId + '</td>' +
                        '<td>' + product.ProductName + '</td>' +
                        '<td>' + product.Category + '</td>' +
                        '<td class="text-right">₩' + Number(product.Price).toLocaleString() + '</td>' +
                        '<td class="text-center">' + product.Stock + '</td>' +
                        '<td class="text-center"><span class="label label-' + statusClass + '">' + product.Status + '</span></td>' +
                        '</tr>';
                });
                $('#productsTableBody').html(productsHtml);

                // 주문 목록
                var ordersHtml = '';
                $.each(data.Orders, function (i, order) {
                    var statusClass = getStatusClass(order.ShippingStatus);
                    ordersHtml += '<tr>' +
                        '<td class="text-center">' + order.OrderId + '</td>' +
                        '<td class="text-center">' + order.OrderDate + '</td>' +
                        '<td>' + order.CustomerName + '</td>' +
                        '<td>' + order.ProductName + '</td>' +
                        '<td class="text-center">' + order.Quantity + '</td>' +
                        '<td class="text-right">₩' + Number(order.TotalAmount).toLocaleString() + '</td>' +
                        '<td class="text-center"><span class="label label-' + statusClass + '">' + order.ShippingStatus + '</span></td>' +
                        '</tr>';
                });
                $('#ordersTableBody').html(ordersHtml);
            }

            // 배송 상태에 따른 CSS 클래스 반환
            function getStatusClass(status) {
                switch (status) {
                    case '배송완료': return 'success';
                    case '배송중': return 'info';
                    case '준비중': return 'warning';
                    default: return 'default';
                }
            }
            // 날짜 포맷 함수
            function formatDateTime(date) {
                var year = date.getFullYear();
                var month = String(date.getMonth() + 1).padStart(2, '0');
                var day = String(date.getDate()).padStart(2, '0');
                var hours = String(date.getHours()).padStart(2, '0');
                var minutes = String(date.getMinutes()).padStart(2, '0');
                var seconds = String(date.getSeconds()).padStart(2, '0');
                return year + month + day + '_' + hours + minutes + seconds;
            }
        });
    </script>

    <style>
        .modal-lg {
            width: 90%;
            max-width: 1200px;
        }

        .panel-body h2 {
            margin: 10px 0;
            font-weight: bold;
        }

        .table-responsive {
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .glyphicon-refresh-animate {
            animation: spin 1s infinite linear;
        }
    </style>
}